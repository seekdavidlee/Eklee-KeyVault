@page "/"
@using EKlee.KeyVault.Client.Models

<PageTitle>Dashboard</PageTitle>
@if (errorMessage is not null)
{
    <RadzenAlert AlertStyle="AlertStyle.Danger" Variant="Variant.Flat" Shade="Shade.Lighter">
        @errorMessage
    </RadzenAlert>
}
<RadzenDataGrid force-grid-header-width="true" @ref="@dataGridRef" ColumnWidth="200px" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@secretItems" TItem="SecretItem">
    <Columns>
        <RadzenDataGridColumn TItem="SecretItem" Title="Name" Width="50px" Property="Name" />
        <RadzenDataGridColumn TItem="SecretItem" Context="record" Width="60px" Filterable="false" Sortable="false" TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right">
            <Template Context="record">
                <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium" @onclick:stopPropagation="true" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

